    "npm": "^6.14.5",
    "sentencer": "^0.2.1",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^9.0.4",
    "electron-packager": "^14.2.1",
    "node-sass": "^4.14.1"
