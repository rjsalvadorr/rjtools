{
  "name": "rjtools",
  "version": "0.1.0",
  "description": "Homemade node tools and scripts",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-css": "node-sass src/css/style.scss css/style.css",
    "start-app": "electron .",
    "start": "npm run build-css && electron .",
